{
  "extends": ["tslint:latest", "tslint-react"],
  "rules": {
    "indent": [true, "tabs", 2],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "curly": [true, "ignore-same-line"],
    "quotemark": [true, "single", "jsx-double"],
		"semicolon": [true, "always"],
		"no-console": false,
		"jsx-alignment": [true, "always"],
		"jsx-space-before-trailing-slash": true
  }
}
